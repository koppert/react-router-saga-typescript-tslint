{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rulesDirectory": [
        "node_modules/tslint-microsoft-contrib"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "quotemark": [
            true,
            "double",
            "jsx-double"
        ],
        "object-literal-sort-keys": false,
        "no-relative-imports": true,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "curly": [true, "as-needed"]
    }
}